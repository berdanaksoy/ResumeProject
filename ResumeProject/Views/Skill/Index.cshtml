@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<style>
    .page-scroll {
        height: calc(100vh - 64px);
        overflow-y: auto;
        overflow-x: hidden;
        padding-bottom: 32px;
    }
</style>

<div class="page-scroll">
    <div class="max-w-[1600px] mx-auto p-6 md:p-10">
        <!-- Header Section -->
        <header class="mb-10 flex items-center justify-between">
            <div>
                <h1 class="text-3xl font-bold tracking-tight text-slate-900 dark:text-white flex items-center gap-3">
                    <span class="material-symbols-outlined text-primary text-4xl">psychology</span>
                    Yetenek Yönetim Paneli
                </h1>
                <p class="text-slate-500 dark:text-[#9db2b9] mt-2">Yetenek kısmındaki açıklamayı ve yetenekleri buradan düzenleyebilirsiniz.</p>
            </div>
            <div class="hidden md:block">
                <div class="w-12 h-12 rounded-full bg-primary/10 flex items-center justify-center border border-primary/20">
                    <span class="material-symbols-outlined text-primary">admin_panel_settings</span>
                </div>
            </div>
        </header>

        <div class="space-y-8">
            <!-- Top Section: Skill Description -->
            <section class="bg-white dark:bg-[#111618] rounded-xl shadow-sm border border-slate-200 dark:border-[#283539] overflow-hidden">
                <div class="p-6 border-b border-slate-200 dark:border-[#283539] flex items-center justify-between bg-slate-50/50 dark:bg-[#1c2427]">
                    <h2 class="text-xl font-semibold flex items-center gap-2">
                        <span class="material-symbols-outlined text-primary">description</span>
                        Yetenek Açıklaması
                    </h2>
                </div>
                <div class="p-6 space-y-4">
                    <form asp-action="SaveDescription" asp-controller="Skill" method="post">
                        <input type="hidden" name="SkillDescriptionId" value="@ViewBag.SkillDescription.SkillDescriptionId" />
                            <div class="flex flex-col space-y-2">
                                <label class="text-sm font-medium text-slate-500 dark:text-[#9db2b9]" for="skill-desc">Genel Açıklama Metni</label>
                                <textarea class="w-full bg-slate-50 dark:bg-[#1d2a33] border border-slate-200 dark:border-[#283539] rounded-lg focus:ring-primary focus:border-primary text-slate-900 dark:text-slate-100 placeholder-slate-400 dark:placeholder-[#9db2b9] transition-all p-3" id="skill-desc" placeholder="Yeteneklerinizi, uzmanlık alanlarınızı ve öğrenme sürecinizi anlatan kısa bir yazı girin..." rows="4" name="Description">@ViewBag.SkillDescription.Description</textarea>
                            </div>
                            <div class="flex justify-end pt-2">
                                <button type="submit" onclick="return confirm('Kaydetmek istediğinizden emin misiniz?')" class="bg-primary hover:bg-primary/90 text-white px-8 py-2.5 rounded-lg font-semibold flex items-center gap-2 transition-colors shadow-lg shadow-primary/20">
                                    <span class="material-symbols-outlined text-[20px]">save</span>
                                    Kaydet
                                </button>
                            </div>
                        </form>
                </div>
            </section>

            <!-- Bottom Section: Skill List -->
            @await Component.InvokeAsync("AdminSkillList")

        </div>

        <!-- System Notification Simulator (Static for UI design) -->
        <div class="fixed bottom-8 right-8 pointer-events-none">
            <div class="bg-slate-900 dark:bg-primary border border-slate-800 dark:border-primary/30 text-white px-6 py-4 rounded-xl shadow-2xl flex items-center gap-4 opacity-0">
                <span class="material-symbols-outlined text-green-400 dark:text-white">check_circle</span>
                <span class="font-medium text-sm">Değişiklikler başarıyla kaydedildi.</span>
            </div>
        </div>
    </div>
</div>
