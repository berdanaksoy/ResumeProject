@model ResumeProject.Entities.Experience

@{
    ViewData["Title"] = "UpdateExperience";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="flex-1 overflow-y-auto p-8">
    <div class="max-w-[1600px] mx-auto space-y-8">
        <!-- Page Heading -->
        <div class="flex items-center gap-4">
            <a href="/Experience/ExperienceList/" class="flex items-center justify-center w-10 h-10 rounded-lg border border-slate-200 dark:border-[#3b4d54] hover:bg-slate-50 dark:hover:bg-[#1c2427] transition-colors">
                <span class="material-symbols-outlined text-[20px]">arrow_back</span>
            </a>
            <div>
                <h3 class="text-3xl font-black tracking-tight">Deneyim Düzenleme Sayfası</h3>
                <p class="text-slate-500 dark:text-[#9db2b9] mt-1">Deneyim bilgilerinizi güncelleyin.</p>
            </div>
        </div>

        <!-- Form Container -->
        <div class="bg-white dark:bg-[#111618] rounded-xl border border-slate-200 dark:border-[#3b4d54] overflow-hidden shadow-sm">
            <div class="p-8">
                <form method="post" class="space-y-6">

                    <input type="hidden" asp-for="ExperienceId"/>

                    <!-- Title -->
                    <div>
                        <label for="title" class="block text-sm font-bold mb-2">
                            Ünvan
                            <span class="text-red-500">*</span>
                        </label>
                        <input type="text"
                               id="title"
                               asp-for="Title"
                               class="w-full px-4 py-3 rounded-lg border border-slate-200 dark:border-[#3b4d54] bg-white dark:bg-[#1c2427] focus:outline-none focus:ring-2 focus:ring-primary/50 transition-all"
                               placeholder="Örn: Frontend Developer"
                               required />
                    </div>

                    <!-- Company Name -->
                    <div>
                        <label for="title" class="block text-sm font-bold mb-2">
                            Şirket Adı
                            <span class="text-red-500">*</span>
                        </label>
                        <input type="text"
                               id="company"
                               asp-for="Company"
                               class="w-full px-4 py-3 rounded-lg border border-slate-200 dark:border-[#3b4d54] bg-white dark:bg-[#1c2427] focus:outline-none focus:ring-2 focus:ring-primary/50 transition-all"
                               placeholder="Örn: ABC Şirketi - Frontend Developer"
                               required />
                    </div>

                    <!-- Description -->
                    <div>
                        <label for="description" class="block text-sm font-bold mb-2">
                            Açıklama
                            <span class="text-red-500">*</span>
                        </label>
                        <textarea id="description"
                                  asp-for="Description"
                                  rows="6"
                                  class="w-full px-4 py-3 rounded-lg border border-slate-200 dark:border-[#3b4d54] bg-white dark:bg-[#1c2427] focus:outline-none focus:ring-2 focus:ring-primary/50 transition-all resize-none"
                                  placeholder="Pozisyon hakkında detaylı bilgi, görev ve sorumluluklar..."
                                  required></textarea>
                        <p class="text-xs text-slate-500 dark:text-[#9db2b9] mt-2">
                            İş deneyiminiz hakkında detaylı bilgi verin
                        </p>
                    </div>

                    <div class="grid grid-cols-2 gap-4">

                        <!-- Start Date -->
                        <div>
                            <label for="startDate" class="block text-sm font-bold mb-2">
                                Başlangıç Tarihi <span class="text-red-500">*</span>
                            </label>
                            <input type="date"
                                   id="startDate"
                                   name="StartDate"
                                   value="@(Model.StartDate.ToString("yyyy-MM-dd"))"
                                   class="w-full px-3 py-2 text-sm rounded-lg border border-slate-200 dark:border-[#3b4d54] bg-white dark:bg-[#1c2427] focus:outline-none focus:ring-2 focus:ring-primary/50 transition-all dark:[color-scheme:dark]"
                                   required />
                        </div>

                        <!-- End Date -->
                        <div>
                            <label for="endDate" class="block text-sm font-bold mb-2">
                                Bitiş Tarihi <span class="text-red-500">*</span>
                            </label>
                            <input type="date"
                                   id="endDate"
                                   name="EndDate"
                                   value="@(Model.EndDate?.ToString("yyyy-MM-dd"))"
                                   class="w-full px-3 py-2 text-sm rounded-lg border border-slate-200 dark:border-[#3b4d54] bg-white dark:bg-[#1c2427] focus:outline-none focus:ring-2 focus:ring-primary/50 transition-all dark:[color-scheme:dark]"
                                   required />
                        </div>

                    </div>

                    <!-- Form Actions -->
                    <div class="flex items-center gap-3 pt-4 border-t border-slate-200 dark:border-[#3b4d54]">
                        <button type="submit"
                                class="flex items-center gap-2 px-6 py-3 bg-primary text-background-dark rounded-lg font-bold text-sm hover:opacity-90 transition-opacity" onclick="return confirm('Kaydetmek istediğinizden emin misiniz?')">
                            <span class="material-symbols-outlined text-[20px]">check</span>
                            Kaydet
                        </button>
                        <a href="/Experience/ExperienceList/"
                           class="flex items-center gap-2 px-6 py-3 bg-slate-100 dark:bg-[#1c2427] text-slate-700 dark:text-slate-300 rounded-lg font-bold text-sm hover:bg-slate-200 dark:hover:bg-[#283539] transition-colors">
                            <span class="material-symbols-outlined text-[20px]">close</span>
                            İptal
                        </a>
                    </div>

                </form>
            </div>
        </div>

    </div>
</div>