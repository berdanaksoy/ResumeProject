@model List<ResumeProject.Entities.About>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<style>
    .page-scroll {
        height: calc(100vh - 64px);
        overflow-y: auto;
        overflow-x: hidden;
        padding-bottom: 32px;
    }

    .form-field {
        width: 100%;
        border-radius: .75rem;
        padding: .75rem;
        font-size: .875rem;
        outline: none;
        transition: .15s ease;
        border: 1px solid rgba(148, 163, 184, .35);
        background: rgba(2, 6, 23, .28);
        color: rgb(226, 232, 240);
    }

        .form-field::placeholder {
            color: rgb(100, 116, 139);
        }

        .form-field:focus {
            border-color: #13b6ec;
            box-shadow: 0 0 0 3px rgba(19, 182, 236, .18);
        }

    input[type="date"].form-field {
        color-scheme: dark;
    }
</style>

<div class="page-scroll">
    <div class="max-w-[1600px] mx-auto px-6 py-12">
        <header class="flex flex-col md:flex-row justify-between items-start md:items-center mb-10 gap-4">
            <div>
                <h1 class="text-4xl font-bold text-primary mb-2">Hakkımda Yönetim Paneli</h1>
                <p class="text-slate-500 dark:text-slate-400">Profilinizi, eğitiminizi ve öne çıkanlarınızı yönetin.</p>
            </div>
        </header>

        <div class="space-y-8">
            <section class="bg-white dark:bg-surface-dark border border-slate-200 dark:border-slate-700/40 rounded-xl shadow-sm overflow-hidden">


                @foreach (var item in Model)
                {
                    <form asp-action="SaveAbout" asp-controller="About" asp-route-id="@item.AboutId" method="post">
                        <div class="p-8">
                            <input type="hidden" name="AboutId" value="@item.AboutId" />
                            <div class="flex items-center gap-3 mb-8 border-b border-slate-100 dark:border-slate-700/40 pb-4">
                                <span class="material-symbols-outlined text-primary">person</span>
                                <h2 class="text-xl font-bold">Temel Bilgiler</h2>
                            </div>
                            <div class="flex flex-col lg:flex-row gap-8">
                                <div class="flex-1 space-y-5">
                                    <div class="grid grid-cols-1 md:grid-cols-2 gap-5">
                                        <div class="flex flex-col gap-2">
                                            <label class="text-sm font-medium text-slate-600 dark:text-slate-300">Ad Soyad</label>
                                            <input name="Fullname" class="form-field" placeholder="Adınızı ve soyadınızı girin" type="text" value="@item.Fullname" />
                                        </div>
                                        <div class="flex flex-col gap-2">
                                            <label class="text-sm font-medium text-slate-600 dark:text-slate-300">Unvan</label>
                                            <input name="Title" class="form-field" placeholder="Örn: Kıdemli Yazılım Geliştirici" type="text" value="@item.Title" />
                                        </div>
                                    </div>
                                    <div class="flex flex-col gap-2">
                                        <label class="text-sm font-medium text-slate-600 dark:text-slate-300">Kısa Açıklama</label>
                                        <textarea name="Description" class="form-field resize-none" placeholder="Kendiniz hakkında kısa bir açıklama yazın..." rows="3">@item.Description</textarea>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="p-4 bg-slate-50 dark:bg-slate-900/20 border-t border-slate-200 dark:border-slate-700/40 text-right">
                            <button type="submit" onclick="return confirm('Kaydetmek istediğinizden emin misiniz?')" class="inline-flex items-center justify-center gap-2 bg-primary text-white hover:opacity-90 px-8 py-2.5 rounded-lg font-semibold transition-all">
                                <span class="material-symbols-outlined text-lg">save</span>
                                <span>Kaydet</span>
                            </button>
                        </div>
                    </form>
                }


            </section>

            <div class="grid grid-cols-1 xl:grid-cols-2 gap-8 items-start">

                @await Component.InvokeAsync("AdminAboutEducation")

                @await Component.InvokeAsync("AdminAboutHighlight")

            </div>
        </div>
    </div>
</div>
