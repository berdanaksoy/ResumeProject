@{
    ViewData["Title"] = "Eğitim Ekle";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<style>
    .page-scroll {
        height: calc(100vh - 64px);
        overflow-y: auto;
        overflow-x: hidden;
        padding-bottom: 32px;
    }

    /* Date picker styling overrides for dark theme */
    input[type="date"]::-webkit-calendar-picker-indicator {
        filter: invert(1);
        cursor: pointer;
    }
</style>

<div class="page-scroll">
    <!-- BEGIN: MainContainer -->
    <div class="w-full max-w-2xl mx-auto py-12 px-6" data-purpose="admin-form-container">
        <!-- BEGIN: FormCard -->
        <section class="bg-white dark:bg-[#111618] border border-slate-200 dark:border-[#283539] rounded-2xl shadow-2xl overflow-hidden">
            <!-- BEGIN: CardHeader -->
            <header class="px-6 py-6 border-b border-slate-200 dark:border-[#283539] flex items-center justify-between">
                <div class="flex items-center gap-3">
                    <div class="w-10 h-10 rounded-lg bg-primary/10 flex items-center justify-center">
                        <span class="material-symbols-outlined text-primary">school</span>
                    </div>
                    <h1 class="text-xl font-bold tracking-tight text-slate-900 dark:text-white">Eğitim Ekle</h1>
                </div>
                <a class="flex items-center gap-2 px-4 py-2 bg-slate-100 dark:bg-[#1c2427] hover:bg-slate-200 dark:hover:bg-[#283539] text-slate-700 dark:text-[#9db2b9] hover:text-slate-900 dark:hover:text-white rounded-lg transition-all text-sm font-medium border border-slate-200 dark:border-[#283539]" data-purpose="back-button" href="/About">
                    <svg class="h-4 w-4" fill="none" stroke="currentColor" viewbox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                        <path d="M10 19l-7-7m0 0l7-7m-7 7h18" stroke-linecap="round" stroke-linejoin="round" stroke-width="2"></path>
                    </svg>
                    Geri Dön
                </a>
            </header>
            <!-- END: CardHeader -->
            <!-- BEGIN: FormBody -->
            <form class="p-8 space-y-6" asp-controller="About" asp-action="CreateEducation" method="post">
                <!-- Input Group: Title -->
                <div data-purpose="form-group">
                    <label class="block text-xs font-bold uppercase tracking-widest text-slate-600 dark:text-[#9db2b9] mb-2 px-1" for="title">
                        BAŞLIK
                    </label>
                    <input class="w-full bg-slate-50 dark:bg-[#1d2a33] border border-slate-200 dark:border-[#283539] rounded-xl px-4 py-3 text-slate-900 dark:text-white placeholder-slate-400 dark:placeholder-[#9db2b9] focus:ring-2 focus:ring-primary focus:border-transparent transition-all outline-none" id="title" name="EducationTitle" placeholder="Eğitim başlığını giriniz..." required="" type="text" />
                </div>

                <!-- Input Group: Provider -->
                <div data-purpose="form-group">
                    <label class="block text-xs font-bold uppercase tracking-widest text-slate-600 dark:text-[#9db2b9] mb-2 px-1" for="EducationProvider">
                        Okul / KURUM
                    </label>
                    <input class="w-full bg-slate-50 dark:bg-[#1d2a33] border border-slate-200 dark:border-[#283539] rounded-xl px-4 py-3 text-slate-900 dark:text-white placeholder-slate-400 dark:placeholder-[#9db2b9] focus:ring-2 focus:ring-primary focus:border-transparent transition-all outline-none" id="provider" name="EducationProvider" placeholder="Üniversite veya platform adı..." required="" type="text" />
                </div>

                <!-- Date Inputs Row -->
                <div class="grid grid-cols-2 gap-4">

                    <!-- Start Date -->
                    <div class="relative">
                        <label for="start_date" class="block text-sm font-bold mb-2">
                            Başlangıç Tarihi <span class="text-red-500">*</span>
                        </label>

                        <input type="date"
                               id="start_date"
                               name="EducationStartDate"
                               required
                               class="w-full px-3 py-2 pr-10 text-sm rounded-lg border border-slate-200 dark:border-[#3b4d54]
                      bg-white dark:bg-[#1c2427]
                      focus:outline-none focus:ring-2 focus:ring-primary/50 transition-all
                      dark:[color-scheme:dark]
                      [&::-webkit-calendar-picker-indicator]:opacity-0
                      [&::-webkit-calendar-picker-indicator]:absolute
                      [&::-webkit-calendar-picker-indicator]:right-3
                      [&::-webkit-calendar-picker-indicator]:w-5
                      [&::-webkit-calendar-picker-indicator]:h-5
                      [&::-webkit-calendar-picker-indicator]:cursor-pointer" />

                        <span class="material-symbols-outlined absolute right-3 top-[43px] text-[20px] text-slate-500 dark:text-white pointer-events-none">
                            calendar_month
                        </span>
                    </div>

                    <!-- End Date -->
                    <div class="relative">
                        <label for="end_date" class="block text-sm font-bold mb-2">
                            Bitiş Tarihi
                        </label>

                        <input type="date"
                               id="end_date"
                               name="EducationEndDate"
                               class="w-full px-3 py-2 pr-10 text-sm rounded-lg border border-slate-200 dark:border-[#3b4d54]
                      bg-white dark:bg-[#1c2427]
                      focus:outline-none focus:ring-2 focus:ring-primary/50 transition-all
                      dark:[color-scheme:dark]
                      [&::-webkit-calendar-picker-indicator]:opacity-0
                      [&::-webkit-calendar-picker-indicator]:absolute
                      [&::-webkit-calendar-picker-indicator]:right-3
                      [&::-webkit-calendar-picker-indicator]:w-5
                      [&::-webkit-calendar-picker-indicator]:h-5
                      [&::-webkit-calendar-picker-indicator]:cursor-pointer" />

                        <span class="material-symbols-outlined absolute right-3 top-[43px] text-[20px] text-slate-500 dark:text-white pointer-events-none">
                            calendar_month
                        </span>

                        <p class="mt-2 text-xs text-slate-500 dark:text-[#9db2b9]">
                            * Halen devam ediyorsa tahmini bitiş tarihini yazınız.
                        </p>
                    </div>

                </div>


                <!-- Action Footer -->
                <div class="pt-4 flex justify-end border-t border-slate-200 dark:border-[#283539] mt-4">
                    <button class="flex items-center gap-2 bg-primary hover:bg-primary/90 text-white px-8 py-3 rounded-xl font-bold transition-all transform active:scale-95 shadow-lg shadow-primary/20" type="submit">
                        <span class="material-symbols-outlined font-bold">check</span>
                        Kaydet
                    </button>
                </div>
            </form>
            <!-- END: FormBody -->
        </section>
        <!-- END: FormCard -->
    <!-- END: MainContainer -->
</div>
