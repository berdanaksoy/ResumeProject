@model ResumeProject.Entities.ServiceDescription

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<style>
    .page-scroll {
        height: calc(100vh - 64px);
        overflow-y: auto;
        overflow-x: hidden;
        padding-bottom: 32px;
    }
</style>

<div class="page-scroll">
    <div class="max-w-[1600px] mx-auto p-6 md:p-8 space-y-8">
        <section class="bg-white dark:bg-[#111618] rounded-xl shadow-lg border border-slate-200 dark:border-[#283539] overflow-hidden">
            <div class="p-6 border-b border-slate-200 dark:border-[#283539] flex items-center justify-between bg-slate-50/50 dark:bg-[#1c2427]">
                <h3 class="text-lg font-semibold flex items-center gap-2">
                    <span class="material-symbols-outlined text-primary">description</span>
                    Hizmet Genel Açıklaması
                </h3>
            </div>
            <form method="post" action="/Service/UpdateDescription">
                <div class="p-6">
                    <div class="space-y-4">
                        <div class="flex flex-col space-y-2">
                            <label class="text-sm font-medium text-slate-600 dark:text-[#9db2b9]" for="serviceDescription">Genel Hizmet Tanıtımı</label>
                            <textarea class="w-full bg-slate-50 dark:bg-[#1d2a33] border border-slate-200 dark:border-[#283539] rounded-lg focus:ring-primary focus:border-primary text-slate-900 dark:text-slate-100 placeholder-slate-400 dark:placeholder-[#9db2b9] transition-all px-3 py-2" id="serviceDescription" name="Description" placeholder="Sunduğunuz hizmetlerin kapsamını ve yaklaşımınızı anlatan bir giriş metni giriniz..." rows="4">@Model.Description</textarea>
                        </div>
                        <div class="flex justify-end pt-2">
                            <button type="submit" class="bg-primary hover:bg-primary/90 text-white px-8 py-2.5 rounded-lg font-semibold flex items-center gap-2 transition-all shadow-lg shadow-primary/20" onclick="return confirm('Kaydetmek istediğinizden emin misiniz?')">
                                <span class="material-symbols-outlined text-[20px]">save</span>
                                Kaydet
                            </button>
                        </div>
                    </div>
                </div>
            </form>
        </section>

        @await Component.InvokeAsync("AdminServiceList")

    </div>

    <!-- System Notification Simulator -->
    <div class="fixed bottom-6 right-6 z-50 pointer-events-none opacity-0 translate-y-2 transition-all">
        <div class="bg-primary text-white px-6 py-4 rounded-xl shadow-2xl flex items-center gap-4">
            <span class="material-symbols-outlined">check_circle</span>
            <span class="font-medium text-sm">Hizmetler başarıyla güncellendi.</span>
        </div>
    </div>
</div>
