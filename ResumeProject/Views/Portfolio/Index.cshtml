@model List<ResumeProject.Entities.Portfolio>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
    var categories = ViewBag.Categories as List<ResumeProject.Entities.Category>;
}

<style>
    .page-scroll {
        height: calc(100vh - 64px);
        overflow-y: auto;
        overflow-x: hidden;
        padding-bottom: 32px;
    }
</style>

<div class="page-scroll">
    <div class="max-w-[1600px] mx-auto py-12 px-6 space-y-8">
        <div class="flex flex-col md:flex-row md:items-center justify-between gap-4">
            <div>
                <h1 class="text-4xl font-bold text-primary mb-2">Projelerim Yönetim Tablosu</h1>
                <p class="text-slate-500 dark:text-slate-400">Portfolyo projelerinizi buradan yönetebilir, ekleyebilir veya silebilirsiniz.</p>
            </div>
            <a class="bg-primary/10 text-primary hover:bg-primary hover:text-white border border-primary/30 px-6 py-3 rounded-lg font-semibold flex items-center justify-center gap-2 transition-all" href="/Portfolio/CreatePortfolio">
                <span class="material-symbols-outlined text-[24px]">add_box</span>
                Yeni Proje Ekle
            </a>
        </div>

        <form asp-action="UpdatePortfolios" asp-controller="Portfolio" method="post">
            <div class="bg-white dark:bg-[#111618] rounded-xl border border-slate-200 dark:border-[#283539] shadow-2xl overflow-hidden">
                <div class="overflow-x-auto">
                    <table class="w-full text-left border-collapse">
                        <thead>
                            <tr class="bg-slate-50/50 dark:bg-[#1c2427] border-b border-slate-200 dark:border-[#283539]">
                                <th class="px-6 py-4 text-xs font-bold uppercase tracking-wider text-slate-500 dark:text-[#9db2b9] w-1/4">Başlık</th>
                                <th class="px-6 py-4 text-xs font-bold uppercase tracking-wider text-slate-500 dark:text-[#9db2b9] w-1/3">Görsel URL</th>
                                <th class="px-6 py-4 text-xs font-bold uppercase tracking-wider text-slate-500 dark:text-[#9db2b9] w-1/6">Kategori</th>
                                <th class="px-6 py-4 text-xs font-bold uppercase tracking-wider text-slate-500 dark:text-[#9db2b9] w-[120px] text-center">Durum</th>
                                <th class="px-6 py-4 text-xs font-bold uppercase tracking-wider text-slate-500 dark:text-[#9db2b9] w-[80px] text-right">İşlem</th>
                            </tr>
                        </thead>
                        <tbody class="divide-y divide-slate-200 dark:divide-[#283539]">
                            @for (int i = 0; i < Model.Count(); i++)
                            {
                                <input type="hidden" name="[@i].PortfolioId" value="@Model[i].PortfolioId" />

                                <tr class="hover:bg-slate-50 dark:hover:bg-[#1c2427] transition-colors group">
                                    <td class="px-6 py-4">
                                        <input class="w-full bg-slate-50 dark:bg-[#1d2a33] border border-slate-200 dark:border-[#283539] rounded-lg focus:ring-primary focus:border-primary text-slate-900 dark:text-slate-100 px-3 py-2"
                                               type="text"
                                               name="[@i].Title"
                                               value="@Model[i].Title" />
                                    </td>
                                    <td class="px-6 py-4">
                                        <div class="flex items-center gap-2">
                                            <span class="material-symbols-outlined text-slate-400 dark:text-[#9db2b9] text-lg">link</span>
                                            <input class="w-full bg-slate-50 dark:bg-[#1d2a33] border border-slate-200 dark:border-[#283539] rounded-lg focus:ring-primary focus:border-primary text-slate-900 dark:text-slate-100 px-3 py-2 text-sm"
                                                   type="text"
                                                   name="[@i].ImageURL"
                                                   value="@Model[i].ImageURL" />
                                        </div>
                                    </td>
                                    <td class="px-6 py-4">
                                        <select class="w-full bg-slate-50 dark:bg-[#1d2a33] border border-slate-200 dark:border-[#283539] rounded-lg focus:ring-primary focus:border-primary text-slate-900 dark:text-slate-100 px-3 py-2"
                                                name="[@i].CategoryId">
                                                @foreach (var cat in categories)
                                                {
                                                    <option value="@cat.CategoryId" selected="@(Model[i].CategoryId == cat.CategoryId)">
                                                        @cat.CategoryName
                                                    </option>
                                                }
                                        </select>
                                    </td>
                                    <td class="px-6 py-4 text-center">
                                        <div class="flex items-center justify-center gap-2">
                                            <input class="w-5 h-5 rounded border-slate-300 dark:border-[#283539] bg-slate-50 dark:bg-[#1d2a33] text-primary focus:ring-primary"
                                                   type="checkbox"
                                                   name="[@i].IsActive"
                                                   value="true"
                                                   @(Model[i].IsActive ? "checked" : "") />
                                            <span class="text-xs text-slate-500 dark:text-[#9db2b9] font-medium">Aktif mi</span>
                                        </div>
                                    </td>
                                    <td class="px-6 py-4 text-right">
                                        <a class="p-2 text-slate-400 dark:text-[#9db2b9] hover:text-red-500 hover:bg-red-500/10 rounded-lg transition-all"
                                           onclick="return confirm('Silmek istediğinizden emin misiniz?')"
                                           title="Sil"
                                           href="/Portfolio/DeletePortfolio/@Model[i].PortfolioId">
                                            <span class="material-symbols-outlined">delete</span>
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                <div class="p-6 bg-slate-50/50 dark:bg-[#1c2427] border-t border-slate-200 dark:border-[#283539] flex items-center justify-between gap-4">
                    <p class="text-sm text-slate-600 dark:text-[#9db2b9]">
                        Toplam <span class="text-slate-900 dark:text-slate-100 font-bold">@Model.Count()</span> proje listeleniyor.
                    </p>
                    <div class="flex gap-4">
                        <button type="submit" class="bg-primary hover:bg-primary/90 text-white px-10 py-2.5 rounded-lg font-bold flex items-center justify-center gap-2 transition-all shadow-lg shadow-primary/20" onclick="return confirm('Kaydetmek istediğinizden emin misiniz?')">
                            <span class="material-symbols-outlined text-[20px]">save</span>
                            Değişiklikleri Kaydet
                        </button>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>