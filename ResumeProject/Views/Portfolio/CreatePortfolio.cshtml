@model List<ResumeProject.Entities.Category>

@{
    ViewData["Title"] = "Portfolyo Ekle";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<style>
    .page-scroll {
        height: calc(100vh - 64px);
        overflow-y: auto;
        overflow-x: hidden;
        padding-bottom: 32px;
    }
</style>

<div class="page-scroll">
    <!-- BEGIN: Portfolio Add Container -->
    <div class="w-full max-w-3xl mx-auto py-12 px-6" data-purpose="portfolio-add-container">
        <div class="bg-white dark:bg-[#111618] border border-slate-200 dark:border-[#283539] rounded-xl shadow-2xl overflow-hidden">
            <!-- BEGIN: Card Header -->
            <header class="p-6 border-b border-slate-200 dark:border-[#283539] flex items-center justify-between">
                <div class="flex items-center gap-4">
                    <div class="bg-primary/10 border border-primary/20 p-2.5 rounded-lg flex items-center justify-center">
                        <span class="material-symbols-outlined text-primary">work</span>
                    </div>
                    <h1 class="text-xl font-semibold text-slate-900 dark:text-white tracking-tight">Portfolyo Ekle</h1>
                </div>
                <a class="flex items-center gap-2 px-4 py-2 rounded-lg bg-slate-100 dark:bg-[#1c2427] hover:bg-slate-200 dark:hover:bg-[#283539] border border-slate-200 dark:border-[#283539] text-sm text-slate-700 dark:text-[#9db2b9] transition-colors" type="button" href="/Portfolio/Index">
                    <span class="material-symbols-outlined text-sm">arrow_back</span>
                    Geri Dön
                </a>
            </header>
            <!-- END: Card Header -->
            <!-- BEGIN: Form Body -->
            <form method="post" class="space-y-6 p-6">
                <!-- Field: Başlık -->
                <div class="space-y-2">
                    <label class="block text-xs font-bold text-slate-500 dark:text-[#9db2b9] uppercase tracking-widest" for="title">Başlık</label>
                    <input class="w-full bg-slate-50 dark:bg-[#1d2a33] border border-slate-200 dark:border-[#283539] rounded-lg px-4 py-3 text-slate-900 dark:text-white placeholder-slate-400 dark:placeholder-[#9db2b9] focus:ring-2 focus:ring-primary/50 focus:border-primary outline-none transition-all"
                           id="title" name="Title" placeholder="Proje başlığını giriniz..." type="text" />
                </div>

                <!-- Field: Görsel URL -->
                <div class="space-y-2">
                    <label class="block text-xs font-bold text-slate-500 dark:text-[#9db2b9] uppercase tracking-widest" for="imageUrl">Görsel URL</label>
                    <input class="w-full bg-slate-50 dark:bg-[#1d2a33] border border-slate-200 dark:border-[#283539] rounded-lg px-4 py-3 text-slate-900 dark:text-white placeholder-slate-400 dark:placeholder-[#9db2b9] focus:ring-2 focus:ring-primary/50 focus:border-primary outline-none transition-all font-mono text-sm"
                           id="imageUrl" name="ImageURL" placeholder="https://örnek.com/gorsel.jpg" type="text" />
                </div>

                <!-- Field: Kategori -->
                <div class="space-y-2">
                    <label class="block text-xs font-bold text-slate-500 dark:text-[#9db2b9] uppercase tracking-widest" for="categoryId">Kategori</label>
                    <div class="relative">
                        <select class="w-full bg-slate-50 dark:bg-[#1d2a33] border border-slate-200 dark:border-[#283539] rounded-lg px-4 py-3 text-slate-900 dark:text-white focus:ring-2 focus:ring-primary/50 focus:border-primary outline-none transition-all appearance-none cursor-pointer"
                                id="categoryId" name="CategoryId">
                            <option disabled selected value="">Kategori seçiniz...</option>
                            @foreach (var category in Model)
                            {
                                <option value="@category.CategoryId">@category.CategoryName</option>
                            }
                        </select>
                        <div class="absolute inset-y-0 right-0 flex items-center pr-3 pointer-events-none text-slate-400 dark:text-[#9db2b9]">
                            <span class="material-symbols-outlined">expand_more</span>
                        </div>
                    </div>
                </div>

                <!-- Field: Durum (Aktif mi?) -->
                <div class="pt-2 flex items-center gap-3">
                    <input type="hidden" name="IsActive" value="false" />
                    <input class="w-5 h-5 rounded border-slate-300 dark:border-[#283539] bg-slate-50 dark:bg-[#1d2a33] text-primary focus:ring-primary/50 focus:ring-offset-0 focus:ring-2 cursor-pointer"
                           id="isActive" name="IsActive" type="checkbox" value="true" />
                    <label class="text-sm font-medium text-slate-700 dark:text-[#9db2b9] cursor-pointer select-none" for="isActive">Aktif mi?</label>
                </div>

                <!-- BEGIN: Action Footer -->
                <div class="pt-6 border-t border-slate-200 dark:border-[#283539] flex justify-end">
                    <button class="bg-primary hover:bg-primary/90 text-white font-bold px-8 py-3 rounded-xl flex items-center gap-2 transition-all transform hover:scale-[1.02] active:scale-95 shadow-lg shadow-primary/20" type="submit">
                        <span class="material-symbols-outlined font-bold">check</span>
                        Kaydet
                    </button>
                </div>
                <!-- END: Action Footer -->
            </form>
            <!-- END: Form Body -->
    </div>
    <!-- END: Portfolio Add Container -->
</div>