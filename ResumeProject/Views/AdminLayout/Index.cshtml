@using ResumeProject.Context
@inject ResumeContext _context

@{
    Layout = null;
}

@{
    var currentController = ViewContext.RouteData.Values["controller"]?.ToString();
    var currentAction = ViewContext.RouteData.Values["action"]?.ToString();
    var totalUnreadMessages = _context.Messages.Count(m => m.IsRead == false);
}


<!DOCTYPE html>

<html class="dark" lang="en">
<head>
    <meta charset="utf-8" />
    <meta content="width=device-width, initial-scale=1.0" name="viewport" />
    <title>Developer Portfolio Admin Dashboard</title>
    <!-- Typography plugin eklenmiş -->
    <script src="https://cdn.tailwindcss.com?plugins=forms,typography,container-queries"></script>

    <!-- Space Grotesk + Inter + JetBrains Mono fontları -->
    <link href="https://fonts.googleapis.com/css2?family=Space+Grotesk:wght@300;400;500;600;700&family=Inter:wght@300;400;500;600;700&family=JetBrains+Mono&display=swap" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:wght,FILL@100..700,0..1&display=swap" rel="stylesheet" />

    <script id="tailwind-config">
                tailwind.config = {
            darkMode: "class",
            theme: {
                extend: {
                    colors: {
                        "primary": "#13b6ec",
                        "primary-teal": "#0d9488",
                        "background-light": "#f6f8f8",
                        "background-dark": "#101d22",
                        "surface-dark": "#161e24",
                    },
                    fontFamily: {
                        "display": ["Space Grotesk", "sans-serif"],
                        "mono": ["JetBrains Mono", "monospace"],
                    },
                    fontSize: {
                        'xs': '0.875rem',
                        'sm': '1rem',
                        'base': '1.125rem',
                        'lg': '1.25rem',
                        'xl': '1.5rem',
                        '2xl': '1.75rem',
                        '3xl': '2.125rem',
                        '4xl': '2.625rem',
                    },
                    borderRadius: {
                        "DEFAULT": "0.5rem",
                        "lg": "0.5rem",
                        "xl": "0.75rem",
                        "full": "9999px"
                    },
                },
            },
        }
    </script>
    <style>
        body {
            font-family: 'Space Grotesk', sans-serif;
        }

        ::-webkit-scrollbar {
            width: 6px;
        }

        ::-webkit-scrollbar-track {
            background: transparent;
        }

        ::-webkit-scrollbar-thumb {
            background: #334155;
            border-radius: 10px;
        }

        .material-symbols-outlined {
            font-variation-settings: 'FILL' 0, 'wght' 400, 'GRAD' 0, 'opsz' 24;
        }
    </style>
</head>
<body class="bg-background-light dark:bg-background-dark text-slate-900 dark:text-slate-100 min-h-screen flex overflow-hidden">
    <!-- Fixed Vertical Sidebar -->
    <aside class="w-64 flex-shrink-0 bg-white dark:bg-[#111618] border-r border-slate-200 dark:border-[#283539] flex flex-col h-screen">
        <div class="p-6 flex items-center gap-3">
            <div class="w-10 h-10 rounded-full bg-primary flex items-center justify-center text-background-dark font-bold text-xl">
                BA
            </div>
            <div class="flex flex-col">
                <h1 class="text-sm font-bold leading-tight">Junior .NET Dev</h1>
                <p class="text-xs text-slate-500 dark:text-[#9db2b9]">Admin Portal</p>
            </div>
        </div>
        <nav class="flex-1 px-4 py-2 space-y-1 overflow-y-auto">
            <a class="flex items-center gap-3 px-3 py-2 rounded-lg transition-colors @(currentController == "Dashboard" ? "bg-primary/10 text-primary" : "text-slate-600 dark:text-[#9db2b9] hover:bg-slate-100 dark:hover:bg-[#1c2427]")" href="/Dashboard/Index">
                <span class="material-symbols-outlined text-[22px]">dashboard</span>
                <span class="text-sm font-medium">Dashboard</span>
            </a>
            <a class="flex items-center gap-3 px-3 py-2 rounded-lg transition-colors @(currentController == "Message" ? "bg-primary/10 text-primary" : "text-slate-600 dark:text-[#9db2b9] hover:bg-slate-100 dark:hover:bg-[#1c2427]")" href="/Message/Index">
                <span class="material-symbols-outlined text-[22px]">message</span>
                <span class="text-sm font-medium">Mesajlar</span>
            </a>
            <a class="flex items-center gap-3 px-3 py-2 rounded-lg transition-colors @(currentController == "About" ? "bg-primary/10 text-primary" : "text-slate-600 dark:text-[#9db2b9] hover:bg-slate-100 dark:hover:bg-[#1c2427]")" href="/About/Index">
                <span class="material-symbols-outlined text-[22px]">person</span>
                <span class="text-sm font-medium">Hakkımda</span>
            </a>
            <a class="flex items-center gap-3 px-3 py-2 rounded-lg transition-colors @(currentController == "Skill" ? "bg-primary/10 text-primary" : "text-slate-600 dark:text-[#9db2b9] hover:bg-slate-100 dark:hover:bg-[#1c2427]")" href="/Skill/Index">
                <span class="material-symbols-outlined text-[22px]">psychology</span>
                <span class="text-sm font-medium">Yeteneklerim & Teknolojiler</span>
            </a>
            <a class="flex items-center gap-3 px-3 py-2 rounded-lg transition-colors @(currentController == "Experience" ? "bg-primary/10 text-primary" : "text-slate-600 dark:text-[#9db2b9] hover:bg-slate-100 dark:hover:bg-[#1c2427]")" href="/Experience/ExperienceList">
                <span class="material-symbols-outlined text-[22px]">work</span>
                <span class="text-sm font-medium">Deneyimlerim</span>
            </a>
            <a class="flex items-center gap-3 px-3 py-2 rounded-lg transition-colors @(currentController == "Service" ? "bg-primary/10 text-primary" : "text-slate-600 dark:text-[#9db2b9] hover:bg-slate-100 dark:hover:bg-[#1c2427]")" href="/Service/Index">
                <span class="material-symbols-outlined text-[22px]">verified</span>
                <span class="text-sm font-medium">Hizmetlerim</span>
            </a>
            <a class="flex items-center gap-3 px-3 py-2 rounded-lg transition-colors @(currentController == "Portfolio" ? "bg-primary/10 text-primary" : "text-slate-600 dark:text-[#9db2b9] hover:bg-slate-100 dark:hover:bg-[#1c2427]")" href="/Portfolio/Index">
                <span class="material-symbols-outlined text-[22px]" style="font-variation-settings: 'FILL' 1">folder</span>
                <span class="text-sm font-bold">Projelerim</span>
            </a>

            <a class="flex items-center gap-3 px-3 py-2 rounded-lg transition-colors @(currentController == "Testimonial" ? "bg-primary/10 text-primary" : "text-slate-600 dark:text-[#9db2b9] hover:bg-slate-100 dark:hover:bg-[#1c2427]")" href="/Testimonial/Index">
                <span class="material-symbols-outlined text-[22px]">description</span>
                <span class="text-sm font-medium">Referanslarım</span>
            </a>
            <a class="flex items-center gap-3 px-3 py-2 rounded-lg transition-colors @(currentController == "Contact" ? "bg-primary/10 text-primary" : "text-slate-600 dark:text-[#9db2b9] hover:bg-slate-100 dark:hover:bg-[#1c2427]")" href="/Contact/Index">
                <span class="material-symbols-outlined text-[22px]">mail</span>
                <span class="text-sm font-medium">Bana Ulaşın</span>
            </a>
        </nav>
    </aside>
    <!-- Main Content Area -->
    <main class="flex-1 flex flex-col min-w-0 bg-background-light dark:bg-background-dark overflow-hidden">
        <!-- Top Navbar -->
        <header class="h-16 flex items-center justify-between px-8 bg-white dark:bg-[#111618] border-b border-slate-200 dark:border-[#283539] z-10">
            <div class="flex items-center gap-2">
                <span class="material-symbols-outlined text-primary">terminal</span>
                <h2 class="text-lg font-bold tracking-tight">Developer Admin Panel</h2>
            </div>
            <div class="flex items-center gap-6">
                <button class="relative p-2 text-slate-500 dark:text-[#9db2b9] hover:bg-slate-100 dark:hover:bg-[#283539] rounded-lg transition-colors">
                    <span class="material-symbols-outlined">message</span>
                    <span class="absolute -top-1 -right-1 min-w-[18px] h-[18px] bg-red-500 text-white text-xs font-semibold rounded-full flex items-center justify-center px-1">
                        @totalUnreadMessages
                    </span>
                </button>
                <div class="flex items-center gap-3 pl-4 border-l border-slate-200 dark:border-[#283539]">
                    <div class="text-right hidden sm:block">
                        <p class="text-xs font-bold">Berdan Aksoy</p>
                        <p class="text-[10px] text-primary">Junior Developer</p>
                    </div>
                    <div class="w-10 h-10 rounded-full bg-primary flex items-center justify-center text-background-dark font-bold text-xl">
                        BA
                    </div>
                </div>
            </div>
        </header>
        <!-- Scrollable Dashboard Content -->

        <div class="flex-1 overflow-y-auto overflow-x-visible">
            @RenderBody()
        </div>


        <!-- Float Action Button for Mobile / Quick Access -->
        <div class="fixed bottom-8 right-8 lg:hidden">
            <button class="w-14 h-14 bg-primary rounded-full shadow-lg flex items-center justify-center text-background-dark hover:scale-105 transition-transform">
                <span class="material-symbols-outlined text-[30px]">add</span>
            </button>
        </div>
    </main>
</body>
</html>