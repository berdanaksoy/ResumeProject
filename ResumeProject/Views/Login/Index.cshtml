
@{
    Layout = null;
}

<!DOCTYPE html>
<html class="dark" lang="tr">
<head>
    <meta charset="utf-8" />
    <meta content="width=device-width, initial-scale=1.0" name="viewport" />
    <script src="https://cdn.tailwindcss.com?plugins=forms,container-queries"></script>
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&amp;display=swap" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:wght,FILL@100..700,0..1&amp;display=swap" rel="stylesheet" />
    <script id="tailwind-config">
        tailwind.config = {
            darkMode: "class",
            theme: {
                extend: {
                    colors: {
                        "primary": "#14b8a6", // teal-500
                        "background-light": "#f6f8f8",
                        "background-dark": "#09090b", // zinc-950
                    },
                    fontFamily: {
                        "display": ["Inter"]
                    },
                    borderRadius: {
                        "DEFAULT": "0.5rem",
                        "lg": "1rem",
                        "xl": "1.5rem",
                        "full": "9999px"
                    },
                },
            },
        }
    </script>
    <title>Admin Giriş Paneli</title>
</head>
<body class="font-display bg-background-light dark:bg-background-dark text-zinc-900 dark:text-zinc-100 min-h-screen flex items-center justify-center p-4">
    <div class="fixed top-0 left-0 w-full h-full overflow-hidden pointer-events-none -z-10">
        <div class="absolute -top-24 -left-24 w-96 h-96 bg-primary/5 rounded-full blur-[120px]"></div>
        <div class="absolute -bottom-24 -right-24 w-96 h-96 bg-primary/5 rounded-full blur-[120px]"></div>
    </div>
    <div class="w-full max-w-md">
        <div class="flex flex-col items-center mb-10">
            <div class="w-14 h-14 bg-zinc-900 border border-zinc-800 rounded-xl flex items-center justify-center mb-6 shadow-xl">
                <span class="material-icons text-primary text-3xl">terminal</span>
            </div>
            <h1 class="text-2xl font-bold tracking-tight text-zinc-900 dark:text-white">Admin <span class="text-primary">Paneli</span></h1>
        </div>
        <div class="bg-white dark:bg-zinc-900/40 backdrop-blur-sm border border-zinc-200 dark:border-zinc-800/50 rounded-2xl shadow-xl p-8 lg:p-10">
            <form action="#" class="space-y-6" method="POST">
                <div class="space-y-2">
                    <label class="block text-sm font-medium text-zinc-600 dark:text-zinc-400" for="email">E-posta</label>
                    <div class="relative">
                        <span class="material-icons absolute left-3.5 top-1/2 -translate-y-1/2 text-zinc-500 text-lg">alternate_email</span>
                        <input class="w-full pl-11 pr-4 py-3 bg-zinc-50 dark:bg-zinc-950 border border-zinc-200 dark:border-zinc-800 rounded-lg focus:ring-2 focus:ring-primary/50 focus:border-primary outline-none transition-all dark:text-white placeholder-zinc-600" id="email" name="email" placeholder="admin@example.com" required="" type="email" />
                    </div>
                </div>
                <div class="space-y-2">
                    <label class="block text-sm font-medium text-zinc-600 dark:text-zinc-400" for="password">Şifre</label>
                    <div class="relative">
                        <span class="material-icons absolute left-3.5 top-1/2 -translate-y-1/2 text-zinc-500 text-lg">lock_outline</span>
                        <input class="w-full pl-11 pr-4 py-3 bg-zinc-50 dark:bg-zinc-950 border border-zinc-200 dark:border-zinc-800 rounded-lg focus:ring-2 focus:ring-primary/50 focus:border-primary outline-none transition-all dark:text-white placeholder-zinc-600" id="password" name="password" placeholder="••••••••" required="" type="password" />
                    </div>
                </div>
                <button class="w-full bg-primary hover:bg-primary/90 text-white font-semibold py-3.5 rounded-lg shadow-lg shadow-primary/20 flex items-center justify-center space-x-2 transition-all active:scale-[0.99] mt-8" type="submit">
                    <span>Giriş Yap</span>
                </button>
            </form>
        </div>
        <p class="text-center text-zinc-600 dark:text-zinc-600 text-xs mt-10 tracking-wide uppercase">
            © 2024 Portfolio Management
        </p>
    </div>

</body>
</html>