@model List<ResumeProject.Entities.Testimonial>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<style>
    .page-scroll {
        height: calc(100vh - 64px);
        overflow-y: auto;
        overflow-x: hidden;
        padding-bottom: 32px;
    }
</style>

<div class="page-scroll">
    <div class="max-w-[1600px] mx-auto py-12 px-6 space-y-8">
        <div class="flex flex-col md:flex-row md:items-center justify-between gap-4">
            <div>
                <h1 class="text-4xl font-bold text-primary mb-2">Referanslarım Yönetim Tablosu</h1>
                <p class="text-slate-500 dark:text-slate-400">Referanslarınızı buradan yönetebilir, yeni referanslar ekleyebilirsiniz.</p>
            </div>
            <a class="bg-primary/10 text-primary hover:bg-primary hover:text-white border border-primary/30 px-6 py-3 rounded-lg font-semibold flex items-center justify-center gap-2 transition-all" href="/Testimonial/CreateTestimonial">
                <span class="material-symbols-outlined text-[24px]">person_add</span>
                Yeni Referans Ekle
            </a>
        </div>

        <div class="bg-white dark:bg-[#111618] rounded-xl border border-slate-200 dark:border-[#283539] shadow-2xl overflow-hidden">
            <form asp-action="UpdateTestimonials" asp-controller="Testimonial" method="post">
                <div class="overflow-x-auto">
                    <table class="w-full text-left border-collapse">
                        <thead>
                            <tr class="bg-slate-50/50 dark:bg-[#1c2427] border-b border-slate-200 dark:border-[#283539]">
                                <th class="px-6 py-4 text-xs font-bold uppercase tracking-wider text-slate-500 dark:text-[#9db2b9] w-[180px]">Ad Soyad</th>
                                <th class="px-6 py-4 text-xs font-bold uppercase tracking-wider text-slate-500 dark:text-[#9db2b9] w-[150px]">Unvan</th>
                                <th class="px-6 py-4 text-xs font-bold uppercase tracking-wider text-slate-500 dark:text-[#9db2b9] w-[150px]">Şirket</th>
                                <th class="px-6 py-4 text-xs font-bold uppercase tracking-wider text-slate-500 dark:text-[#9db2b9]">Yorum</th>
                                <th class="px-6 py-4 text-xs font-bold uppercase tracking-wider text-slate-500 dark:text-[#9db2b9] w-[200px]">Görsel URL</th>
                                <th class="px-6 py-4 text-xs font-bold uppercase tracking-wider text-slate-500 dark:text-[#9db2b9] w-[120px] text-center">Onaylandı mı?</th>
                                <th class="px-6 py-4 text-xs font-bold uppercase tracking-wider text-slate-500 dark:text-[#9db2b9] w-[80px] text-right">İşlem</th>
                            </tr>
                        </thead>
                        <tbody class="divide-y divide-slate-200 dark:divide-[#283539]">
                            @for (int i = 0; i < Model.Count(); i++)
                            {
                                <tr class="hover:bg-slate-50 dark:hover:bg-[#1c2427] transition-colors group">
                                    <input type="hidden" name="[@i].TestimonialId" value="@Model[i].TestimonialId" />
                                    <td class="px-4 py-4">
                                        <input class="w-full bg-slate-50 dark:bg-[#1d2a33] border border-slate-200 dark:border-[#283539] rounded-lg focus:ring-primary focus:border-primary text-slate-900 dark:text-slate-100 px-3 py-2 text-sm" type="text" name="[@i].Fullname" value="@Model[i].Fullname" />
                                    </td>
                                    <td class="px-4 py-4">
                                        <input class="w-full bg-slate-50 dark:bg-[#1d2a33] border border-slate-200 dark:border-[#283539] rounded-lg focus:ring-primary focus:border-primary text-slate-900 dark:text-slate-100 px-3 py-2 text-sm" type="text" name="[@i].Title" value="@Model[i].Title" />
                                    </td>
                                    <td class="px-4 py-4">
                                        <input class="w-full bg-slate-50 dark:bg-[#1d2a33] border border-slate-200 dark:border-[#283539] rounded-lg focus:ring-primary focus:border-primary text-slate-900 dark:text-slate-100 px-3 py-2 text-sm" type="text" name="[@i].Company" value="@Model[i].Company" />
                                    </td>
                                    <td class="px-4 py-4">
                                        <textarea class="w-full bg-slate-50 dark:bg-[#1d2a33] border border-slate-200 dark:border-[#283539] rounded-lg focus:ring-primary focus:border-primary text-slate-900 dark:text-slate-100 px-3 py-2 text-sm resize-none" placeholder="Yorum yazın..." rows="1" name="[@i].CommentDetail">@Model[i].CommentDetail</textarea>
                                    </td>
                                    <td class="px-4 py-4">
                                        <div class="flex items-center gap-2">
                                            <span class="material-symbols-outlined text-slate-400 dark:text-[#9db2b9] text-lg">link</span>
                                            <input class="w-full bg-slate-50 dark:bg-[#1d2a33] border border-slate-200 dark:border-[#283539] rounded-lg focus:ring-primary focus:border-primary text-slate-900 dark:text-slate-100 px-3 py-2 text-sm" type="text" name="[@i].ImageURL" value="@Model[i].ImageURL" />
                                        </div>
                                    </td>
                                    <td class="px-4 py-4 text-center">
                                        <div class="flex items-center justify-center gap-2">
                                            <input class="w-5 h-5 rounded border-slate-300 dark:border-[#283539] bg-slate-50 dark:bg-[#1d2a33] text-primary focus:ring-primary"
                                                   type="checkbox"
                                                   name="[@i].IsConfirm"
                                                   value="true"
                                                   @(Model[i].IsConfirm ? "checked" : "") />
                                            <span class="text-[10px] text-slate-500 dark:text-[#9db2b9] font-medium uppercase">Onay</span>
                                        </div>
                                    </td>
                                    <td class="px-6 py-4 text-right">
                                        <button type="submit"
                                                formaction="/Testimonial/DeleteTestimonial"
                                                formmethod="post"
                                                name="id"
                                                value="@Model[i].TestimonialId"
                                                class="p-2 text-slate-400 dark:text-[#9db2b9] hover:text-red-500 hover:bg-red-500/10 rounded-lg transition-all"
                                                onclick="return confirm('Silmek istediğinizden emin misiniz?')"
                                                title="Sil">
                                            <span class="material-symbols-outlined">delete</span>
                                        </button>
                                    </td>

                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                <div class="p-6 bg-slate-50/50 dark:bg-[#1c2427] border-t border-slate-200 dark:border-[#283539] flex items-center justify-between gap-4">
                    <p class="text-sm text-slate-600 dark:text-[#9db2b9]">Toplam <span class="text-slate-900 dark:text-slate-100 font-bold">@Model.Count()</span> referans listeleniyor.</p>
                    <div class="flex gap-4">
                        <button class="bg-primary hover:bg-primary/90 text-white px-10 py-2.5 rounded-lg font-bold flex items-center justify-center gap-2 transition-all shadow-lg shadow-primary/20" type="submit" onclick="return confirm('Kaydetmek istediğinizden emin misiniz?')">
                            <span class="material-symbols-outlined text-[20px]">save</span>
                            Değişiklikleri Kaydet
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
