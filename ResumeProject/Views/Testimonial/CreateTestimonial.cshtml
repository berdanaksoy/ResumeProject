@model ResumeProject.Entities.Testimonial

@{
    ViewData["Title"] = "Referans Ekle";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<style>
    .page-scroll {
        height: calc(100vh - 64px);
        overflow-y: auto;
        overflow-x: hidden;
        padding-bottom: 32px;
        font-family: "Space Grotesk", "Inter", system-ui, -apple-system, "Segoe UI", Roboto, Arial, sans-serif;
    }
</style>

<div class="page-scroll">
    <div class="w-full max-w-3xl mx-auto py-12 px-6" data-purpose="page-wrapper">
        <section class="w-full bg-white dark:bg-[#111618] border border-slate-200 dark:border-[#283539] rounded-xl overflow-hidden shadow-2xl" data-purpose="form-card">
            <header class="p-6 border-b border-slate-200 dark:border-[#283539] flex items-center justify-between">
                <div class="flex items-center gap-4">
                    <div class="bg-primary/10 border border-primary/20 p-2.5 rounded-lg flex items-center justify-center">
                        <span class="material-symbols-outlined text-primary text-2xl">person_add</span>
                    </div>
                    <h1 class="text-xl font-semibold text-slate-900 dark:text-white">Referans Ekle</h1>
                </div>

                <a class="flex items-center gap-2 px-4 py-2 border border-slate-200 dark:border-[#283539] rounded-lg text-sm text-slate-700 dark:text-[#9db2b9] bg-slate-100 dark:bg-[#1c2427] hover:bg-slate-200 dark:hover:bg-[#283539] transition-colors duration-200"
                   type="button"
                   href="/Testimonial/Index">
                    <span class="material-symbols-outlined text-sm">arrow_back</span>
                    Geri Dön
                </a>
            </header>

            <div class="p-8">
                <form asp-action="CreateTestimonial" asp-controller="Testimonial" method="post">
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                        <div class="flex flex-col gap-2">
                            <label class="text-[11px] font-bold text-slate-500 dark:text-[#9db2b9] uppercase tracking-widest" for="fullname">Ad Soyad</label>
                            <input class="w-full bg-slate-50 dark:bg-[#1d2a33] border border-slate-200 dark:border-[#283539] rounded-lg px-4 py-3 text-sm text-slate-900 dark:text-white placeholder-slate-400 dark:placeholder-[#9db2b9] focus:outline-none focus:ring-2 focus:ring-primary/50 focus:border-primary transition-all"
                                   id="fullname"
                                   name="Fullname"
                                   placeholder="Ad Soyad giriniz..."
                                   type="text" />
                        </div>

                        <div class="flex flex-col gap-2">
                            <label class="text-[11px] font-bold text-slate-500 dark:text-[#9db2b9] uppercase tracking-widest" for="title">Ünvan</label>
                            <input class="w-full bg-slate-50 dark:bg-[#1d2a33] border border-slate-200 dark:border-[#283539] rounded-lg px-4 py-3 text-sm text-slate-900 dark:text-white placeholder-slate-400 dark:placeholder-[#9db2b9] focus:outline-none focus:ring-2 focus:ring-primary/50 focus:border-primary transition-all"
                                   id="title"
                                   name="Title"
                                   placeholder="Ünvan giriniz..."
                                   type="text" />
                        </div>
                    </div>

                    <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mt-6">
                        <div class="flex flex-col gap-2">
                            <label class="text-[11px] font-bold text-slate-500 dark:text-[#9db2b9] uppercase tracking-widest" for="company">Şirket</label>
                            <input class="w-full bg-slate-50 dark:bg-[#1d2a33] border border-slate-200 dark:border-[#283539] rounded-lg px-4 py-3 text-sm text-slate-900 dark:text-white placeholder-slate-400 dark:placeholder-[#9db2b9] focus:outline-none focus:ring-2 focus:ring-primary/50 focus:border-primary transition-all"
                                   id="company"
                                   name="Company"
                                   placeholder="Şirket adı giriniz..."
                                   type="text" />
                        </div>

                        <div class="flex flex-col gap-2">
                            <label class="text-[11px] font-bold text-slate-500 dark:text-[#9db2b9] uppercase tracking-widest" for="imageurl">Görsel URL</label>
                            <input class="w-full bg-slate-50 dark:bg-[#1d2a33] border border-slate-200 dark:border-[#283539] rounded-lg px-4 py-3 text-sm text-slate-900 dark:text-white placeholder-slate-400 dark:placeholder-[#9db2b9] focus:outline-none focus:ring-2 focus:ring-primary/50 focus:border-primary transition-all"
                                   id="imageurl"
                                   name="ImageURL"
                                   placeholder="https://ornek.com/gorsel.jpg"
                                   type="url" />
                        </div>
                    </div>

                    <div class="flex flex-col gap-2 mt-6">
                        <label class="text-[11px] font-bold text-slate-500 dark:text-[#9db2b9] uppercase tracking-widest" for="commentDetail">Yorum Detayı</label>
                        <textarea class="w-full bg-slate-50 dark:bg-[#1d2a33] border border-slate-200 dark:border-[#283539] rounded-lg px-4 py-3 text-sm text-slate-900 dark:text-white placeholder-slate-400 dark:placeholder-[#9db2b9] focus:outline-none focus:ring-2 focus:ring-primary/50 focus:border-primary transition-all resize-none"
                                  id="commentDetail"
                                  name="CommentDetail"
                                  placeholder="Referans yorumunu buraya yazınız..."
                                  rows="4"></textarea>
                    </div>

                    <div class="flex items-center gap-3 pt-4">
                        <input asp-for="IsConfirm"
                               class="h-5 w-5 rounded border-slate-300 dark:border-[#283539] bg-slate-50 dark:bg-[#1d2a33] text-primary focus:ring-0 focus:ring-offset-0 cursor-pointer transition-colors duration-200" />
                        <label asp-for="IsConfirm" class="text-sm font-medium text-slate-700 dark:text-white cursor-pointer">Aktif mi?</label>
                    </div>

                    <div class="pt-6 border-t border-slate-200 dark:border-[#283539] flex justify-end mt-6">
                        <button class="flex items-center gap-2 bg-primary hover:bg-primary/90 text-white font-bold px-8 py-3 rounded-xl transition-all duration-300 shadow-lg shadow-primary/20"
                                type="submit">
                            <span class="material-symbols-outlined font-bold">check</span>
                            Kaydet
                        </button>
                    </div>
                </form>
            </div>
        </section>
    </div>
</div>
