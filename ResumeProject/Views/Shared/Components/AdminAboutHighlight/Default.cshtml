@model List<ResumeProject.Entities.Highlight>

<form asp-controller="About" asp-action="SaveHighlight" method="post">
    <section class="bg-white dark:bg-surface-dark border border-slate-200 dark:border-slate-700/40 rounded-xl shadow-sm overflow-hidden flex flex-col">
        <div class="p-6">
            <div class="flex items-center justify-between mb-6 border-b border-slate-100 dark:border-slate-700/40 pb-4">
                <div class="flex items-center gap-3">
                    <span class="material-symbols-outlined text-primary">auto_awesome</span>
                    <h2 class="text-xl font-bold">Öne Çıkanlar</h2>
                </div>

                <a href="@Url.Action("CreateHighlight", "About")"
                   class="flex items-center gap-1 text-primary hover:bg-primary/10 px-3 py-1.5 rounded-lg transition-all text-sm font-medium">
                    <span class="material-symbols-outlined text-base">add</span>
                    <span>Yeni Ekle</span>
                </a>
            </div>

            <div class="space-y-4">

                @for (int i = 0; i < Model.Count(); i++)
                {
                    <div class="flex flex-col gap-4 p-4 border border-slate-100 dark:border-slate-700/40 rounded-xl bg-slate-50/50 dark:bg-slate-900/20 group">
                        <div class="flex items-start justify-between">
                            <input type="hidden" name="highlights[@i].HighlightId" value="@Model[i].HighlightId" />
                            <div class="flex-1 space-y-3">
                                <div class="flex flex-col gap-1.5">
                                    <label class="text-xs font-medium text-slate-500 dark:text-slate-400">Başlık</label>
                                    <input name="highlights[@i].HighlightTitle" class="form-field font-semibold" placeholder="Başlık" type="text" value="@Model[@i].HighlightTitle" />
                                </div>

                                <div class="flex flex-col gap-1.5">
                                    <label class="text-xs font-medium text-slate-500 dark:text-slate-400">Açıklama</label>
                                    <textarea name="highlights[@i].HighlightDescription" class="form-field" placeholder="Başarınız hakkında kısa bir açıklama..." rows="2">@Model[@i].HighlightDescription</textarea>
                                </div>
                            </div>

                            <div class="flex items-start pl-2">
                                <a onclick="return confirm('Silmek istediğinizden emin misiniz?')" class="p-2 text-slate-400 hover:text-red-500 transition-colors"
                                   href="/About/DeleteHighlight/@Model[i].HighlightId">
                                    <span class="material-symbols-outlined">delete_outline</span>
                                </a>
                            </div>
                        </div>
                    </div>
                }

            </div>
        </div>

        <div class="p-4 bg-slate-50 dark:bg-slate-900/20 border-t border-slate-200 dark:border-slate-700/40 text-right">
            <button class="inline-flex items-center justify-center gap-2 bg-primary text-white hover:opacity-90 px-8 py-2.5 rounded-lg font-semibold transition-all" onclick="return confirm('Kaydetmek istediğinizden emin misiniz?')" type="submit">
                <span class="material-symbols-outlined text-lg">save</span>
                <span>Kaydet</span>
            </button>
        </div>
    </section>
</form>