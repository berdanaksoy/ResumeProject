@model List<ResumeProject.Entities.Service>

<section class="bg-white dark:bg-[#111618] rounded-xl shadow-lg border border-slate-200 dark:border-[#283539] overflow-hidden">
    <div class="p-6 border-b border-slate-200 dark:border-[#283539] flex items-center justify-between bg-slate-50/50 dark:bg-[#1c2427]">
        <h3 class="text-lg font-semibold flex items-center gap-2">
            <span class="material-symbols-outlined text-primary">list_alt</span>
            Hizmet Listesi
        </h3>
        <a class="bg-primary/10 text-primary hover:bg-primary hover:text-white border border-primary/30 px-4 py-2 rounded-lg text-sm font-medium flex items-center gap-2 transition-all" href="/Service/CreateService">
            <span class="material-symbols-outlined text-[20px]">add</span>
            Yeni Hizmet Ekle
        </a>
    </div>
    <form method="post" action="/Service/UpdateServices">
        <div class="p-6">
            <div class="space-y-6">
                @for (int i = 0; i < Model.Count(); i++)
                    {
                    <input type="hidden" name="services[@i].ServiceId" value="@Model[@i].ServiceId" />
                    <div class="p-5 bg-slate-50 dark:bg-[#1c2427] border border-slate-200 dark:border-[#283539] rounded-xl relative group">
                        <a class="absolute top-4 right-4 p-2 text-slate-400 dark:text-[#9db2b9] hover:text-red-500 hover:bg-red-500/10 rounded-lg transition-all" title="Sil" onclick="return confirm('Silmek istediğinizden emin misiniz?')" href="/Service/DeleteService/@Model[@i].ServiceId">
                            <span class="material-symbols-outlined">delete</span>
                        </a>
                        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
                            <div class="space-y-2">
                                <label class="text-xs font-bold uppercase tracking-wider text-slate-500 dark:text-[#9db2b9]">Başlık</label>
                                <input class="w-full bg-white dark:bg-[#1d2a33] border border-slate-200 dark:border-[#283539] rounded-lg focus:ring-primary focus:border-primary text-slate-900 dark:text-slate-100 px-3 py-2" type="text" value="@Model[@i].Title" name="services[@i].Title" />
                            </div>
                            <div class="space-y-2">
                                <label class="text-xs font-bold uppercase tracking-wider text-slate-500 dark:text-[#9db2b9]">İkon Sınıfı</label>
                                <div class="flex gap-2">
                                    <div class="flex items-center justify-center w-10 h-10 bg-primary/20 border border-primary/30 rounded text-primary">
                                        <span class="material-symbols-outlined">code</span>
                                    </div>
                                    <input class="w-full bg-white dark:bg-[#1d2a33] border border-slate-200 dark:border-[#283539] rounded-lg focus:ring-primary focus:border-primary text-slate-900 dark:text-slate-100 px-3 py-2" type="text" value="@Model[@i].IconClass" name="services[@i].IconClass" />
                                </div>
                            </div>
                            <div class="md:col-span-2 lg:col-span-3 space-y-2">
                                <label class="text-xs font-bold uppercase tracking-wider text-slate-500 dark:text-[#9db2b9]">Kısa Açıklama</label>
                                <textarea class="w-full bg-white dark:bg-[#1d2a33] border border-slate-200 dark:border-[#283539] rounded-lg focus:ring-primary focus:border-primary text-slate-900 dark:text-slate-100 px-3 py-2" rows="2" name="services[@i].Description">@Model[@i].Description</textarea>
                            </div>
                        </div>
                    </div>
                    }
            </div>

            <div class="flex flex-col sm:flex-row items-center justify-between gap-4 pt-8 mt-6 border-t border-slate-200 dark:border-[#283539]">
                <button class="w-full sm:w-auto bg-primary hover:bg-primary/90 text-white px-10 py-2.5 rounded-lg font-semibold flex items-center justify-center gap-2 transition-all shadow-lg shadow-primary/20" type="submit" onclick="return confirm('Kaydetmek istediğinizden emin misiniz?')">
                    <span class="material-symbols-outlined text-[20px]">save</span>
                    Değişiklikleri Kaydet
                </button>
            </div>
        </div>
    </form>
</section>