@model List<ResumeProject.Entities.Experience>

@{
    Layout = null;

    string RangeText(DateTime start, DateTime? end)
        => $"{start:yyyy} - {(end.HasValue ? end.Value.ToString("yyyy") : "Güncel")}";

    var icons = new[] { "laptop_mac", "code", "terminal", "work", "settings", "developer_mode" };
    var i = 0;
}

<section class="lg:col-span-2 space-y-4">
    <div class="flex items-center justify-between">
        <h2 class="text-lg font-bold flex items-center">
            <span class="material-symbols-outlined mr-2 text-primary">timeline</span>
            Profesyonel Zaman Çizelgesi
        </h2>
        <a href="/Experience/ExperienceList"
           class="bg-primary hover:bg-teal-700 text-white text-xs font-bold py-1.5 px-4 rounded transition-colors flex items-center inline-flex">
            <span class="material-symbols-outlined text-sm mr-1">edit</span> Düzenle
        </a>
    </div>

    <div class="bg-white dark:bg-surface-dark rounded-xl border border-slate-200 dark:border-slate-800 p-8">
        <div class="relative space-y-8 before:absolute before:inset-0 before:ml-5 before:-translate-x-px md:before:mx-auto md:before:translate-x-0 before:h-full before:w-0.5 before:bg-gradient-to-b before:from-transparent before:via-slate-300 dark:before:via-slate-700 before:to-transparent">

            @if (Model == null || Model.Count == 0)
            {
                <div class="text-sm text-slate-500 dark:text-slate-400">
                    Henüz deneyim eklenmemiş.
                </div>
            }
            else
            {
                foreach (var item in Model.OrderByDescending(x => x.StartDate))
                {
                    var icon = icons[i % icons.Length];
                    i++;

                    <div class="relative flex items-center justify-between md:justify-normal md:odd:flex-row-reverse group">
                        <div class="flex items-center justify-center w-10 h-10 rounded-full border border-white dark:border-slate-900 bg-slate-200 dark:bg-slate-800 text-slate-500 dark:text-slate-400 shadow shrink-0 md:order-1 md:group-odd:-translate-x-1/2 md:group-even:translate-x-1/2 z-10">
                            <span class="material-symbols-outlined text-sm">@icon</span>
                        </div>

                        <div class="w-[calc(100%-4rem)] md:w-[45%] p-4 rounded border border-slate-200 dark:border-slate-800 bg-white dark:bg-slate-900/50 shadow-sm">
                            <div class="flex items-center justify-between space-x-2 mb-1">
                                <div class="font-bold text-slate-900 dark:text-white">
                                    @item.Title
                                </div>
                                <time class="font-mono text-xs font-medium text-primary">
                                    @RangeText(item.StartDate, item.EndDate)
                                </time>
                            </div>

                            <div class="text-slate-500 dark:text-slate-400 text-sm mb-2">
                                @item.Company
                            </div>

                            <p class="text-xs text-slate-600 dark:text-slate-400 leading-relaxed">
                                @item.Description
                            </p>
                        </div>
                    </div>
                }
            }

        </div>
    </div>
</section>
