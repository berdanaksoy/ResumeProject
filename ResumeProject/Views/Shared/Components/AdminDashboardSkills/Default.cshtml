@model dynamic

@{
    Layout = null;
}

<div class="lg:col-span-1 space-y-6">
    <div class="relative overflow-hidden bg-gradient-to-br from-teal-500 to-emerald-600 p-6 rounded-xl text-white h-[calc(50%-0.75rem)]">
        <div class="relative z-10 h-full flex flex-col justify-between">
            <div>
                <p class="text-xs font-bold uppercase tracking-widest opacity-80">En Yüksek Yetenek</p>
                <h4 class="text-2xl font-black mt-2">@Model.HighestSkill.SkillName</h4>
            </div>
            <div class="mt-4">
                <div class="flex justify-between items-center mb-1">
                    <span class="text-sm font-black">@Model.HighestSkill.SkillLevel%</span>
                </div>
                <div class="w-full bg-white/20 rounded-full h-2">
                    <div class="bg-white h-2 rounded-full" style="width: @Model.HighestSkill.SkillLevel%"></div>
                </div>
            </div>
        </div>
        <span class="material-symbols-outlined absolute -right-6 -bottom-6 text-[10rem] opacity-10">code</span>
    </div>
    <div class="relative overflow-hidden bg-gradient-to-br from-slate-700 to-slate-900 p-6 rounded-xl text-white h-[calc(50%-0.75rem)]">
        <div class="relative z-10 h-full flex flex-col justify-between">
            <div>
                <p class="text-xs font-bold uppercase tracking-widest opacity-80">En Düşük Yetenek</p>
                <h4 class="text-2xl font-black mt-2">@Model.LowestSkill.SkillName</h4>
            </div>
            <div class="mt-4">
                <div class="flex justify-between items-center mb-1">
                    <span class="text-sm font-black">@Model.LowestSkill.SkillLevel%</span>
                </div>
                <div class="w-full bg-white/10 rounded-full h-2">
                    <div class="bg-yellow-400 h-2 rounded-full" style="width: @Model.LowestSkill.SkillLevel%"></div>
                </div>
            </div>
        </div>
        <span class="material-symbols-outlined absolute -right-6 -bottom-6 text-[10rem] opacity-10">settings</span>
    </div>
</div>