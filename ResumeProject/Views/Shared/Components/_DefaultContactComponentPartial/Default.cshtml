@model List<ResumeProject.Entities.Contact>

<section id="contact">
	<div class="container">
		<div class="row">
			<div class="col-lg-10 mx-lg-auto">
				@foreach (var item in Model)
				{
					<div class="row mb-8">
						<div class="col-lg-8 mx-lg-auto text-center">
							<div class="section-title h2 mb-3">
								<h2 class="mb-0">Bana Ulaşın</h2>
								<span class="title-letter">B</span>
							</div>
							<p>@item.Description</p>
						</div>
					</div>
					<div class="row mb-8">
						<div class="col-md-4 mb-5 mb-md-0">
							<div class="feature-block">
								<div class="feature-icon text-primary mb-4">
									<div class="mx-auto">
										<i class="ti-mobile"></i>
									</div>
								</div>
								<p class="text-center">
									<a href="tel:@item.PhoneNumber" class="text-dark">
										@item.PhoneNumber
									</a><br />

									@* This field should be stored in the format "+905357171715".*@

									<a href="tel:@item.PhoneNumber2" class="text-dark">
										@item.PhoneNumber2
									</a>
								</p>

							</div>
						</div>

						<div class="col-md-4 mb-5 mb-md-0">
							<div class="feature-block">
								<div class="feature-icon text-primary mb-4">
									<div class="mx-auto">
										<i class="ti-location-pin"></i>
									</div>
								</div>
								<p class="text-center">
									<a href="https://www.google.com/maps/search/?api=1&query=@item.Address"
									   target="_blank"
									   class="text-dark">
										@item.Address
									</a>
								</p>
							</div>
						</div>

						<div class="col-md-4">
							<div class="feature-block">
								<div class="feature-icon text-primary mb-4">
									<div class="mx-auto">
										<i class="ti-email"></i>
									</div>
								</div>
								<p class="text-center">
									<a href="mailto:@item.Email" class="text-dark">@item.Email</a><br />
									<a href="mailto:@item.Email2" class="text-dark">@item.Email2</a>
								</p>
							</div>
						</div>
					</div>
				}
				
				<div class="contact-form" >
					<form class="mb-0" id="cf" name="cf" asp-controller="Message" asp-action="SendMessage" method="post" autocomplete="off">
						<div class="form-row">
							<div class="form-process"></div>

							<div class="col-12 col-md-6">
								<div class="form-group error-text-white">
									<input type="text" id="cf-name" name="Fullname" placeholder="Adınızı ve soyadınızı giriniz." class="form-control required">
								</div>
							</div>

							<div class="col-12 col-md-6">
								<div class="form-group error-text-white">
									<input type="email" id="cf-email" name="EmailAddress" placeholder="Email adresinizi giriniz." class="form-control required">
								</div>
							</div>

							<div class="col-12">
								<div class="form-group error-text-white">
									<input type="text" id="cf-subject" name="Subject" placeholder="Başlık giriniz." class="form-control">
								</div>
							</div>

							<div class="col-12 mb-4">
								<div class="form-group error-text-white">
									<textarea name="MessageDetail" id="cf-message" placeholder="Mesajınızı yazınız." class="form-control required" rows="7"></textarea>
								</div>
							</div>

							<div class="col-12 d-none">
								<input type="text" id="cf-botcheck" name="cf-botcheck" value="" class="form-control" />
							</div>

							<div class="col-12 text-center">
								<button class="btn btn-primary" type="submit" id="cf-submit" name="cf-submit">Mesajı Gönder</button>
								<div id="sendStatus" class="mt-3" style="display:none; font-weight:600;">
									Mesaj gönderildi ✅
								</div>
							</div>
						</div>
					</form>
					<div class="contact-form-result text-center"></div>
				</div>
			</div>
		</div>
	</div>
</section>
<script>
	(function () {
		const form = document.getElementById("cf");
		const status = document.getElementById("sendStatus");
		const btn = document.getElementById("cf-submit");

		if (!form || !status || !btn) return;

		form.addEventListener("submit", function () {
			btn.disabled = true;

			status.style.display = "block";

			setTimeout(() => {
				status.style.display = "none";
				btn.disabled = false;
			}, 3000);
		});
	})();
</script>

